{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "description": "snakemake configuration file",
  "detect_relations": true,
  "properties": {
    "DATA": {
      "type": "object",
      "properties": {
        "directories": {
          "type": "object",
          "properties": {
            "samples_dir": {
              "type": "string"
            },
            "references_dir": {
              "type": "string"
            },
            "out_dir": {
              "type": "string"
            }
          }
        },
        "fasta_suffix": {
          "type": "string",
          "default": "fasta"
        }
      },
      "required": [
        "samples_dir",
        "references_dir",
        "out_dir"
      ]
    },
    "PIPE_OPTION": {
      "type": "object",
      "properties": {
        "size_min": {
          "required": false,
          "type": "integer",
          "pattern": "^[0-9]{3}$",
          "title": "The size_min use to pipepline",
          "default": 20
        }
      }
    }
  },
  "additionalProperties": true
}
