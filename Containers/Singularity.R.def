BootStrap: docker
From: ubuntu:18.04
%labels
    Florian CHARRIAT - R software and package for generate Rmarkdown report
    Adapted by Julie Orjuela to culebrONT
%post
# Install of R and Rmarkdown for report of Assembly pipeline
    mkdir /tools
    
## Install dependance of R software
    apt update
    LC_ALL=fr_FR.UTF-8
    echo 'debconf debconf/frontend select Noninteractive' | debconf-set-selections
    apt install -y software-properties-common locales
    apt update
    apt install -y libpng16-16 libblas3 libblas-dev liblapack-dev liblapack3 libreadline7 r-recommended r-doc-html libxml2-dev libcurl4-openssl-dev libssl-dev libmagick++-dev
    
## Add repository for download latest version of R
    apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 51716619E084DAB9
    add-apt-repository "deb https://cloud.r-project.org/bin/linux/ubuntu bionic-cran35/"
    apt update
    
## Install R
    apt install -y r-base-core pandoc
    
##  add R packages from CRAN
### Install RMarkdown and TinyTeX
    R --slave -e 'install.packages(c("rmarkdown","tinytex"))'

# add R packages from bioconductor
    Rscript -e "install.packages('BiocManager')"
    Rscript -e "library(BiocManager); install('devtools')"
   
    R -e "install.packages('ggplot2')"
    R -e "install.packages('DT')"
    R -e "install.packages('knitr')"
    R -e "install.packages('stringr')"
    R -e "install.packages('tidyverse')"
    R -e "install.packages('plotly')"
    R -e "install.packages('dplyr')"
    R -e "install.packages('optparse')"
    R -e "install.packages('htmltools')"
    R -e "install.packages('rmdformats')"
    R -e "install.packages('magrittr')"
    R -e "install.packages('yaml')"
    R -e "install.packages('png')"
    R -e "install.packages('here')"
    R -e "install.packages('htmlwidgets')"
    R -e "install.packages('gridExtra')"
    R -e "install.packages('cowplot')"
    R -e "install.packages('magick')"

# add R packages from github
    Rscript -e "library(devtools); install_github('strengejacke/strengejacke')"

