# Singularity recipe for creating a container for using the program QUAST

Bootstrap: docker
From: ubuntu:18.04

%labels
	Quast container

%post

	apt update -y
	apt install -y locales
	ln -fs /usr/share/zoneinfo/Europe/Paris /etc/localtime
	export DEBIAN_FRONTEND=noninteractive
	apt-get install -y tzdata
	dpkg-reconfigure --frontend noninteractive tzdata
	locale-gen fr_FR.UTF-8
	dpkg-reconfigure locales
        apt install -y python3.7 python3-pip python-setuptools
	apt install -y build-essential wget zlib1g-dev pkg-config libfreetype6-dev libpng-dev perl openjdk-8-jdk
        python3 -m pip install matplotlib
	python3 -m pip install quast

